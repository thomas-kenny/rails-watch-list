<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center mt-5">
    <h2>Save any kind of movies</h2>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
            <%= list.name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
